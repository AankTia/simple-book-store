<h2>Authors</h2>

<p>
  <%= link_to "New author", new_author_path %>
</p>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <%= render author %>
    <% end %>
  </tbody>
</table>

<%= paginate @authors %>